<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Grouped Tables</title>
    <link href="/static/css/amin_panel_styles.css" rel="stylesheet">
    <script>
        function redirectToEdit(id) {
            window.location.href = window.location.href + "/" + id;
        }

        function redirectToAdd() {
            window.location.href = window.location.href + "/add";
        }
    </script>
</head>
<body>


<div class="header-container">
    <h2>${pluralName}</h2>
    <button class="add-button" onclick="redirectToAdd()">Add</button>
</div>
<table>
    <thead>
    <tr>
        #foreach($columnName in $columnNames)
            <th>$columnName</th>
        #end
    </tr>
    </thead>
    <tbody>
        #foreach($data in $rows)
        <tr onclick="redirectToEdit($data.primaryKey)">
            #foreach($item in $data.data)
                <td>$item</td>
            #end
        </tr>
        #end
    </tbody>
</table>

</body>
</html>
